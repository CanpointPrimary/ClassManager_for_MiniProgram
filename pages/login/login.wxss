.container {
  height: 100%;
  width: 100%;
  position: relative;
}
.container .banner_item {
  background-color: lightgreen;
  text-align: center;
}
.container .cast {
  padding-top: 300rpx;
}
.container .cast button {
  width: 65%;
  height: 150rpx;
  margin-bottom: 20rpx;
  padding: 0;
  line-height: 150rpx;
}
.container .desc {
  position: absolute;
  display: flex;
  justify-content: center;
  width: 100%;
  bottom: 30rpx;
  color: #02a8db;
  font-size: 30rpx;
}
