.container {
  position: relative;
  padding-top: 8px;
  background-color: #f3f4f3;
  height: 100%;
}
.container .card {
  height: 200rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.container .mask {
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  z-index: 2;
  background-color: #444444c5;
  color: #fff;
  font-weight: bolder;
  font-size: 20px;
}
.container .mask .arrow {
  position: absolute;
  right: 80px;
  font-size: 30px;
}
.container .mask .desc {
  line-height: 50px;
  text-align: center;
  width: 60%;
  margin: 0 auto;
  margin-top: 30%;
}
