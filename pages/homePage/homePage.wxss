.container {
  background-color: #f3f4f3;
  height: 100%;
  position: relative;
}
.container .switchClass {
  padding: 0 2%;
}
.container .switchClass view {
  position: relative;
  display: flex;
  align-items: center;
}
.container .switchClass view text {
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.container .switchClass view .btnCopy {
  font-size: 22rpx;
  border: 1px solid #a8a8a8;
  color: #a8a8a8;
  padding: 0 18rpx;
  margin-left: 10rpx;
  line-height: 30rpx;
  border-radius: 18rpx;
}
.container .switchClass view .invite {
  position: absolute;
  right: 0;
  color: #fff;
  padding: 0 10rpx;
  line-height: 30rpx;
  border-radius: 18rpx;
  font-size: 22rpx;
  background-color: #7fcf01;
}
.container .switchClass view .btn {
  margin-left: 8rpx;
  font-size: 36rpx;
  color: #a8a8a8;
}
.container .switchClass view .btn text {
  font-size: 24rpx;
  margin-left: 8rpx;
}
.container .menu {
  height: 300rpx;
  display: flex;
  flex-wrap: wrap;
}
.container .menu .menuItem {
  flex: 25%;
  height: 150rpx;
  background-color: #fff;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.container .menu .menuItem .iconfont {
  font-size: 70rpx;
  line-height: 75rpx;
}
.container .menu .menuItem .itemName {
  font-size: 28rpx;
}
.container .toDo .tabTop text {
  margin-left: 20rpx;
  padding: 5rpx;
}
.container .toDo .tabTop .tab_active {
  border-bottom: 2px solid orange;
}
.container .toDo .addToDo {
  position: absolute;
  bottom: 60rpx;
  right: 60rpx;
  font-size: 45px;
  color: #add8e6;
}
