.container {
  background-color: #f3f4f3;
  height: 100%;
  position: relative;
}
.container .menu {
  height: 300rpx;
  display: flex;
  flex-wrap: wrap;
}
.container .menu .menuItem {
  flex: 25%;
  height: 150rpx;
  background-color: #fff;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.container .menu .menuItem .iconfont {
  font-size: 70rpx;
  line-height: 75rpx;
}
.container .menu .menuItem .itemName {
  font-size: 28rpx;
}
.container .toDo .tabTop text {
  margin-left: 20rpx;
  padding: 5rpx;
}
.container .toDo .tabTop .tab_active {
  border-bottom: 2px solid orange;
}
.container .toDo .addToDo {
  position: absolute;
  bottom: 60rpx;
  right: 60rpx;
  font-size: 45px;
  color: #add8e6;
}
