.container {
  background-color: #dce9fe;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
}
.container .bdSunsine {
  position: absolute;
  right: -56px;
  top: 0;
  z-index: 0;
}
.container .main {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.container .menu {
  height: 380rpx;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  overflow: hidden;
  z-index: 1;
}
.container .menu .menuItem {
  flex: 25%;
  height: 190rpx;
  background-color: #fff;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.container .menu .menuItem .iconfont {
  font-size: 70rpx;
  line-height: 75rpx;
  color: #97bbef;
}
.container .menu .menuItem .itemName {
  font-size: 26rpx;
  color: #666;
}
.container .toDo {
  flex: 1;
  background-color: #fff;
  margin-top: 10rpx;
  padding-bottom: 90rpx;
}
.container .toDo .tabTop {
  position: relative;
  padding-top: 18rpx;
  padding-left: 30rpx;
  font-weight: bold;
  font-size: 32rpx;
  color: #1d1d1d;
}
.container .toDo .addToDo {
  position: fixed;
  bottom: 200rpx;
  margin-bottom: env(safe-area-inset-bottom);
  right: 60rpx;
  height: 70rpx;
  width: 70rpx;
  color: #add8e6;
}
.container .toDo .noList {
  padding-top: 20%;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}
.container .toDo .to_do_date {
  padding: 0 30rpx;
}
.container .toDo .to_do_date .timeLine {
  font-size: 20rpx;
  text-align: center;
  color: #999;
  margin-bottom: 20rpx;
}
.container .toDo .to_do_date .to_do_item {
  background-color: #fffbef;
  border-radius: 20rpx;
  padding: 30rpx 15rpx;
  display: flex;
  margin-bottom: 30rpx;
}
.container .toDo .to_do_date .to_do_item .left {
  width: 60rpx;
}
.container .toDo .to_do_date .to_do_item .left .avatar {
  width: 58rpx;
  height: 58rpx;
}
.container .toDo .to_do_date .to_do_item .right {
  flex: 1;
  padding-left: 15rpx;
}
.container .toDo .to_do_date .to_do_item .right .head {
  height: 36rpx;
  display: flex;
  font-size: 26rpx;
  align-items: center;
  margin-bottom: 5rpx;
}
.container .toDo .to_do_date .to_do_item .right .head .pname {
  font-weight: bolder;
  margin-right: 20rpx;
}
.container .toDo .to_do_date .to_do_item .right .head .ptime {
  font-size: 24rpx;
  color: #666;
  margin-right: 40rpx;
}
.container .toDo .to_do_date .to_do_item .right .head .tag {
  background-color: #1e50a2;
  height: 29rpx;
  font-size: 20rpx;
  color: #fff;
  line-height: 29rpx;
  padding: 0 18rpx;
  border-radius: 15rpx;
}
.container .toDo .to_do_date .to_do_item .right .title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}
.container .toDo .to_do_date .to_do_item .right .value {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}
.container .toDo .to_do_date .to_do_item .right .endTime {
  font-size: 20rpx;
  color: #666;
}
.container .toDo .to_do_date .to_do_item .right .endTime .desc {
  color: #1e50a2;
}
.container .toDo .to_do_date .application {
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
}
.container .toDo .to_do_date .application .status {
  font-size: 26rpx;
  color: #1e50a2;
}
.container .joinClass {
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}
.container .joinClass .btnJoin {
  margin-top: 40rpx;
  border-radius: 30rpx;
  line-height: 130rpx;
  color: #fff;
  height: 130rpx;
  width: 300rpx;
  text-align: center;
  background-color: #add8e6;
}
