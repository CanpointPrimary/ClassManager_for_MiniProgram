.container {
  background-color: #dce9fe;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}
.container .main {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.container .menu {
  height: 300rpx;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.container .menu .menuItem {
  flex: 25%;
  height: 150rpx;
  background-color: #fff;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.container .menu .menuItem .iconfont {
  font-size: 70rpx;
  line-height: 75rpx;
}
.container .menu .menuItem .itemName {
  font-size: 28rpx;
}
.container .toDo {
  flex: 1;
  background-color: #fff;
  margin-top: 10rpx;
}
.container .toDo .tabTop text {
  margin-left: 20rpx;
  padding: 5rpx;
}
.container .toDo .tabTop .tab_active {
  border-bottom: 2px solid orange;
}
.container .toDo .addToDo {
  position: fixed;
  bottom: 160rpx;
  right: 60rpx;
  font-size: 45px;
  color: #add8e6;
}
.container .joinClass {
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}
.container .joinClass .btnJoin {
  margin-top: 40rpx;
  border-radius: 30rpx;
  line-height: 130rpx;
  color: #fff;
  height: 130rpx;
  width: 300rpx;
  text-align: center;
  background-color: #add8e6;
}
