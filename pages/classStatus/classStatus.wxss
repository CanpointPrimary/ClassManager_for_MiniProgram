.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.container .tabbar {
  height: 80rpx;
  display: flex;
  align-items: center;
  position: relative;
  margin-bottom: 20rpx;
}
.container .tabbar .tab_item {
  color: #999;
  font-size: 28rpx;
  margin: 0 30rpx;
}
.container .tabbar .tab_active {
  color: #1d1d1d;
}
.container .tabbar .underline {
  width: 66rpx;
  height: 4rpx;
  border-radius: 4rpx;
  background-color: #1e50a2;
  position: absolute;
  bottom: 0;
  left: 52rpx;
  box-sizing: border-box;
}
.container .main .memList {
  margin-bottom: 32rpx;
}
.container .main .mem_hd {
  padding-left: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 48rpx;
  margin-bottom: 19rpx;
  color: #1d1d1d;
  display: flex;
  align-items: center;
}
.container .main .mem_hd text {
  padding-left: 10rpx;
  color: #999;
  font-weight: normal;
  font-size: 22rpx;
}
.container .main .teaScroll {
  height: 262rpx;
  width: 100%;
  white-space: nowrap;
}
.container .main .teaScroll .tea_card {
  display: inline-block;
  text-align: center;
  width: 210rpx;
  height: 262rpx;
  margin-left: 30rpx;
  background-color: #edf6fd;
  border-radius: 20rpx;
}
.container .main .teaScroll .tea_card .inner {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.container .main .teaScroll .tea_card .inner .avatar {
  height: 126rpx;
  width: 126rpx;
}
.container .main .teaScroll .tea_card .inner .teaName {
  padding-top: 7rpx;
  line-height: 36rpx;
  font-size: 26rpx;
  color: #333;
}
.container .main .teaScroll .tea_card .inner .teaSubject {
  line-height: 30rpx;
  font-size: 22rpx;
  color: #666;
}
.container .main .search {
  height: 98rpx;
  background-color: #f1f1f1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}
.container .main .search .sear_bd {
  position: relative;
  display: flex;
  align-items: center;
  height: 60rpx;
  background: #fff;
  width: 565rpx;
  border-radius: 30rpx;
  padding-left: 24rpx;
  box-sizing: border-box;
}
.container .main .search .sear_bd input {
  font-size: 24rpx;
}
.container .main .search .sear_bd .placeholder {
  font-size: 24rpx;
  color: #999;
}
.container .main .search .sear_bd .icon_search {
  height: 34rpx;
  width: 34rpx;
  margin-right: 24rpx;
}
.container .main .search .group {
  display: flex;
  align-items: center;
}
.container .main .search .group .icon_group {
  width: 48rpx;
  height: 48rpx;
}
.container .main .search .group view {
  padding-left: 8rpx;
  font-size: 24rpx;
  color: #1e50a2;
}
.container .stuScroll {
  height: 200rpx;
}
.container .stuScroll .stu_card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 690rpx;
  height: 142rpx;
  border-radius: 20rpx;
  background-color: #fdeded;
  margin: 0 auto;
  margin-bottom: 10rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.container .stuScroll .stu_card:nth-child(even) {
  background-color: #fffbef;
}
.container .stuScroll .stu_card .stu_bd {
  width: 180rpx;
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: space-between;
}
.container .stuScroll .stu_card .stu_bd .avatar {
  width: 62rpx;
  height: 62rpx;
}
.container .stuScroll .stu_card .stu_bd .info {
  width: 80rpx;
}
.container .stuScroll .stu_card .stu_bd .info .name {
  font-size: 26rpx;
  color: #333;
}
.container .stuScroll .stu_card .stu_bd .info .relation {
  color: #999;
  font-size: 20rpx;
}
.container .stuScroll .stu_card .arrow image {
  width: 20rpx;
  height: 32rpx;
}
