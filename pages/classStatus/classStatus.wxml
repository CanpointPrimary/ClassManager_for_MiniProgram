<!--pages/classStatus/classStatus.wxml-->
<view class="container">
    <!-- 顶部栏模块 -->
    <nav-bar>学情</nav-bar>

    <!-- tabbar -->
    <view class="tabbar">
        <view class="tab_item {{current === 0? 'tab_active' : ''}}" bindtap="changetab" data-index='{{0}}'>班级成员</view>
        <view class="tab_item {{current === 1? 'tab_active' : ''}}" bindtap="changetab" data-index='{{1}}'>审核记录</view>
        <view class="underline"></view>
    </view>

    <!-- 班级成员 -->
    <view class="main" wx:if="{{current === 0}}">

        <!-- 老师列表 -->
        <view class="memList">
            <view class="mem_hd">老师{{teaList.length}}人<text>（点击头像可编辑老师信息）</text>
            </view>
            <scroll-view scroll-x enhanced show-scrollbar="{{false}}" class="teaScroll">
                <view class="tea_card" wx:for="{{teaList}}" wx:key="id">
                    <view class="inner">
                        <image class="avatar" src="{{item.avaSrc}}"></image>
                        <view class="teaName">{{item.tName}}</view>
                        <view class="teaSubject">{{item.subject}}</view>
                    </view>
                </view>
            </scroll-view>
        </view>

        <!-- 搜索栏 -->
        <view class="search">
            <view class="sear_bd">
                <image src="/static/icon/search.svg" class="icon_search"></image>
                <input type="search" class="input" placeholder="查找学生" placeholder-class="placeholder"></input>
            </view>
            <view class="group">
                <image src="/static/icon/group.svg" class="icon_group"></image>
                <view>小组</view>
            </view>
        </view>
        <view class="memList stu">
            <view class="mem_hd">学生{{stuList.length}}人</view>
            <scroll-view scroll-y class="stuScroll" style="height:{{tabTop-scrollTop}}px;">
                <view class="stu_card" wx:for="{{stuList}}" wx:key="id">
                    <view class="stu_bd">
                        <image class="avatar" src="{{item.avaSrc}}"></image>
                        <view class="info">
                            <view class="name">{{item.name}}</view>
                            <view class="relation">{{item.relation}}</view>
                        </view>
                    </view>
                    <view class="arrow">
                        <image src="/static/icon/arrow.svg"></image>
                    </view>
                </view>
            </scroll-view>
        </view>
    </view>
    <view class="main" wx:if="{{current === 1}}">
        审核
    </view>
</view>