<!--pages/group/editGroup/editGroup.wxml-->
<view class="container">
    <d-cell>
        <view class="title">
            <input type="text" value="{{title}}"></input>
            <mp-icon icon='close' color='#1e50a2' size='18' bindtap="clear"></mp-icon>
        </view>
    </d-cell>
    <view class="members">
        <view class="member">
            <mp-icon icon='close' size='14' color='#1e50a2'></mp-icon>
            <image src="/static/avatar2.svg" class="avatar"></image>
            <view class="rname">张三</view>
        </view>
        <image src="/static/groupIcon/add.svg" class="addMember"></image>
    </view>
</view>