/* pages/group/editGroup/editGroup.wxss */
.container {
    padding: 0 30rpx;
    height: 100%;
}

.title {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.cell--cell {
    margin-bottom: 53rpx;
}

input {
    flex: 1;
}

.avatar {
    width: 72rpx;
    height: 72rpx;
    margin-bottom: 15rpx;
}

.members {
    display: flex;
    flex-wrap: wrap;
}

.member {
    box-sizing: border-box;
    width: 93rpx;
    height: 150rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 20rpx;
    margin-left: 20rpx;
}

.rname {
    font-size: 24rpx;
    color: #666;
    line-height: 24rpx;
}

.member .weui-icon {
    position: absolute;
    right: -14rpx;
    top: -14rpx;
}

.addMember {
    width: 75rpx;
    height: 75rpx;
    margin-right: 30rpx;
    margin-left: 20rpx;
}

.button--btn {
    margin: 30rpx auto;
}