.container {
  min-height: 100%;
  background-color: #EDF6FD;
}
.container .body {
  background-color: #fff;
  width: 100%;
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
}
.container .body .header {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.container .body .header .recipient {
  margin-right: 20rpx;
  color: #1E50A2;
  font-size: 28rpx;
}
.container .body .title {
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 82rpx;
  background: #FFFBEF;
  border-radius: 10rpx;
}
.container .body .title input {
  width: 100%;
}
.container .body .title text {
  color: #666;
  font-size: 22rpx;
  margin-top: 28rpx;
}
.container .body .btns {
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}
.container .body .btns .folder {
  width: 36rpx;
  height: 36rpx;
  margin: 0 10rpx;
}
.container .body .btns .block {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-right: 30rpx;
}
.container .body .btns .block .voice {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}
.container .body .btns .block .smart {
  display: flex;
  align-items: center;
}
.container .body .btns .block .mic {
  width: 36rpx;
  height: 36rpx;
  margin: 0 10rpx;
}
.container .body .textarea {
  display: flex;
  flex-direction: column;
  height: 175rpx;
  background: #F6F6F6;
  opacity: 0.5;
}
.container .body .textarea .desc {
  width: 100%;
  font-size: 28rpx;
  line-height: 40rpx;
}
.container .van-cell {
  background-color: transparent;
  font-size: 28rpx;
  height: 90rpx;
}
.container .check {
  margin-top: 10rpx;
  height: 78rpx;
  background-color: transparent;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  align-items: center;
  color: #1d1d1d;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.container .check switch {
  zoom: 0.78125;
  padding-right: 20rpx;
}
.container .submit {
  width: 245rpx;
  height: 74rpx;
  background: #97BBEF;
  border-radius: 37rpx;
  text-align: center;
  line-height: 74rpx;
  font-size: 32rpx;
  color: #1E50A2;
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
}
.container .timePicker {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 430rpx;
  background-color: #fff;
  z-index: 2;
  border-radius: 20rpx;
}
.container .timePicker picker-view {
  height: 249rpx;
  width: 630rpx;
  background-color: #f6f6f6;
  z-index: 3;
}
.container .van-popup {
  background: #fff;
}
.container .van-popup .block {
  display: flex;
  justify-content: space-around;
}
.container .van-popup .block .btn {
  width: 200rpx;
  height: 84rpx;
  border-radius: 10rpx;
  line-height: 84rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.container .van-popup .block .cancel {
  color: #1E50A2;
  border: 2rpx solid #EEECEC;
}
.container .van-popup .block .certain {
  background-color: #97BBEF;
  color: #fff;
}
.container .van-popup .van-picker {
  width: 95%;
  border-radius: 40rpx;
  margin: 20rpx auto;
  background-color: #F6F6F6;
}
.container .van-popup .van-picker .col {
  border-left: 4px solid #1E50A2;
  background-color: #fff;
  box-sizing: border-box;
}
