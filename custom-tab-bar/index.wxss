/* components/tabBar/index.wxss */
.tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: white;
    display: flex;
    padding-bottom: env(safe-area-inset-bottom);
}

.tabBd {
    display: block;
    width: 100%;
    height: 50rpx;
    position: absolute;
    bottom: 0;
    margin-bottom: env(safe-area-inset-bottom);
    z-index: -1;
}

.safeBottom {
    position: absolute;
    bottom: 0;
    padding-bottom: 1px;
    background: #dce9fe;
    height: env(safe-area-inset-bottom);
    width: 100%;
}


.tab-bar-item {
    flex: 1;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.tab-bar-item .cover-image {
    width: 64rpx;
    height: 64rpx;
}

.tab-bar-item .cover-view {
    font-size: 22rpx;
    padding-bottom: 8rpx;
}