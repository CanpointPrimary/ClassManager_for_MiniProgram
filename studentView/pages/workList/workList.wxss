.container {
  min-height: 100vh;
}
.container .header {
  padding: 30rpx;
  height: 75rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.container .header .tabbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  width: 202rpx;
}
.container .header .tabbar .tabbatItem {
  width: 64rpx;
  font-size: 32rpx;
  color: #666;
}
.container .header .tabbar .current {
  color: #1d1d1d;
  font-weight: bolder;
}
.container .header .tabbar .underline {
  position: absolute;
  bottom: 0;
  border-radius: 2rpx;
  height: 4rpx;
  width: 64rpx;
  background: #1E50A2;
}
.container .report {
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  box-shadow: 0px 0px 4rpx #1e50a2;
  width: 198rpx;
  height: 68rpx;
  justify-content: center;
  font-size: 28rpx;
  color: #1e50a2;
}
.container .report image {
  width: 48rpx;
  height: 48rpx;
}
